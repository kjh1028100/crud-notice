extends base

block content
    form(method="post",enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file",id="avatar",name="avatar",accept="image/png")
        input(type="text", name="title",placeholder="Input title",required,maxlength="20")
        textarea(name="content", cols="30", rows="10",required,id="notice",placeholder="input write notice ") 
        input(type="submit",value="submit")